html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(href="https://fonts.googleapis.com/css?family=Lato:300,300i,700", rel="stylesheet")
    link(rel="stylesheet" href="/style.css")
    link(rel="shortcut icon" type="image/png" href="/img/favicon.png")
    title Natours | #{title}
    block head
  body
    header.header
      nav(class="nav nav--tours")
        a(class="nav__el",href="#") All venue
      div(class="header__logo")
        img(src="/img/logo-white.png" alt="Natours logo")
      nav.nav.nav--user   
        if user
          a.nav__el.nav__el-logout(href='#') Log out
          a.nav__el(href="/account")
            img.nav__user-img(src=`/img/users/${user.photo}` alt='user photo')
            span=user.email.split('@')[0]
        else
          a.nav__el(href='/login') log in
          a.nav__el.nav__el--cta(href='/signup')  Sign up
    block content

    div.footer
      //FOOTER
      .footer__logo
        img(src="/img/logo-green.png" alt="Natours logo")
      ul.footer__nav
        li
          a(href="#") About us
        li
          a(href="#") Download apps
        li
          a(href="#") Become a guide
        li
          a(href="#") Careers  
        li
          a(href="#") Contact
      p.footer__copyright  &copy; Oyetunji Ibukunoluwa. All rights reserved.
    script(src="/js/index.js" type="module")      
    script(src="https://js.stripe.com/v3/")
    script(src="https://unpkg.com/axios/dist/axios.min.js")
    script(src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch")
